<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="3dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="10pt"
                android:layout_margin="5dp"
                android:background="@color/header"
                android:text="-"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_below="@id/header"
                android:id="@+id/linear1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_weight="3"
                    android:id="@+id/ln"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/txt_task"
                            android:layout_marginLeft="5dp"
                            android:textSize="10pt"
                            android:text="Open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />



                        <TextView
                            android:visibility="gone"
                            android:textStyle="italic"
                            android:textColor="#1f3083"
                            android:layout_marginTop="-5px"
                            android:id="@+id/txt_id"
                            android:layout_marginLeft="5dp"
                            android:textSize="6pt"
                            android:text="Baru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <TextView
                        android:textStyle="italic"
                        android:textColor="#1f3083"
                        android:layout_marginTop="-5px"
                        android:id="@+id/txt_tanggal"
                        android:layout_marginLeft="5dp"
                        android:textSize="6pt"
                        android:text="12:12:121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/txt_koordinat"
                        android:layout_marginLeft="5dp"
                        android:textSize="6pt"
                        android:text="-69304034"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <View
                        android:background="#cecece"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/txt_deskripsi"
                        android:layout_marginLeft="5dp"
                        android:textSize="6pt"
                        android:text="komentar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/txt_task_id"
                        android:layout_marginLeft="5dp"
                        android:textSize="6pt"
                        android:text="komentar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <approval.com.approval_sdi.UrlImageView
                        android:background="#eaeaea"
                        android:id="@+id/image_laporan"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="200px"
                        android:scaleType="fitXY"
                        android:layout_height="200px" />

                    <Button
                        android:id="@+id/button_update"
                        android:layout_margin="5dp"
                        android:text="Update"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"
                        android:layout_width="200px"
                        android:layout_height="50dp" />

                    <Button
                        android:id="@+id/button_view_detil"
                        android:layout_margin="5dp"
                        android:text="View Detil"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"
                        android:layout_width="200px"
                        android:layout_height="50dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

</ScrollView>