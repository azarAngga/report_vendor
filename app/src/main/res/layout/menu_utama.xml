<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#fcfcfc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_marginTop="200dp"
            android:id="@+id/kat"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pilih Kategori Pekerjaan"
            android:textSize="12pt" />

        <LinearLayout
            android:layout_below="@+id/kat"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:textStyle="bold"
                    android:background="@drawable/ic_mantenance_new"
                    android:id="@+id/preventive"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:textStyle="bold"
                    android:textSize="12pt"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:text="Preventive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/ic_mantenance_2new"
                    android:id="@+id/ccorrective"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textSize="12pt"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:text="Corrective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/footer2"
            android:baselineAlignBottom="true" />

    </RelativeLayout>



</LinearLayout>